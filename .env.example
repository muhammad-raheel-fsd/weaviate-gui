# Weaviate Connection Configuration
# Copy this file to .env.local and update the values for your environment

# Weaviate Instance URL
# Local development (no auth): http://localhost:8080
# Docker compose: http://localhost:13065
# Production: https://your-weaviate-cluster.weaviate.network
WEAVIATE_URL=http://localhost:8080

# Weaviate API Key (optional for local, required for production)
# Leave empty for local development without authentication
# For production/cloud instances, get this from your Weaviate dashboard
WEAVIATE_API_KEY=

# Optional: Weaviate Cluster Configuration
# WEAVIATE_SCHEME=https
# WEAVIATE_HOST=your-cluster.weaviate.network
# WEAVIATE_PORT=443

# Environment (development, staging, production)
NODE_ENV=development

# Optional: Additional Weaviate Configuration
# WEAVIATE_TIMEOUT=30000
# WEAVIATE_BATCH_SIZE=100
